{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist/cjs",

    "declaration": true,
    "declarationDir": "dist/types",

    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "moduleResolution": "node",
    "lib": ["dom", "es2018"],

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["**/*.stories.ts", "**/*.stories.tsx"]
}
